<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    tools:context=".fragment.navigationBar">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:id="@+id/explorer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cursos"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:id="@+id/icon_explorer"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageButton
                android:id="@+id/imgBtnExplorer"
                android:layout_width="24dp"
                android:layout_height="24dp"
                style="@style/icon_explorer"
                android:focusable="true"
                android:clickable="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            style="@style/text_icon_explorer"
            app:layout_constraintTop_toBottomOf="@+id/icon_explorer"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/icon_explorer"
            app:layout_constraintEnd_toEndOf="@id/icon_explorer"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:id="@+id/cursos"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/account"
        app:layout_constraintStart_toEndOf="@id/explorer"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:id="@+id/icon_cursos"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageButton
                android:id="@+id/imgBtnCursos"
                android:layout_width="24dp"
                android:layout_height="24dp"
                style="@style/icon_explorer"
                android:clickable="true"
                android:src="@drawable/leaderboard_light"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:focusable="true" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            style="@style/text_icon_explorer"
            app:layout_constraintTop_toBottomOf="@+id/icon_cursos"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/icon_cursos"
            app:layout_constraintEnd_toEndOf="@id/icon_cursos"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:id="@+id/account"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cursos"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:id="@+id/icon_account"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageButton
                android:id="@+id/imgBtnAccount"
                android:layout_width="24dp"
                android:layout_height="24dp"
                style="@style/icon_explorer"
                android:src="@drawable/ic_account_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            style="@style/text_icon_explorer"
            app:layout_constraintTop_toBottomOf="@+id/icon_account"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/icon_account"
            app:layout_constraintEnd_toEndOf="@id/icon_account"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>