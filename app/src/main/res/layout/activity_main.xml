<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="335dp"
        android:layout_height="126dp"
        android:id="@+id/logocas"
        android:src="@drawable/logocas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toTopOf="parent">
    </ImageView>
    <Button
        android:id="@+id/btn_convocatoria"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="Convocatorias"
        style="@style/btnAppSecundary"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toTopOf="@id/logocas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/btn_cursos"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="Cursos"
        style="@style/btnAppSecundary"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toTopOf="@id/logocas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/btn_examenes"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="Exámenes"
        style="@style/btnAppSecundary"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_constraintTop_toBottomOf="@id/btn_convocatoria"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="75dp"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_inicio_sesion"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="Inicio Sesión"
        style="@style/btnAppPrimary"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_constraintTop_toBottomOf="@id/btn_examenes"
        android:layout_marginTop="100dp"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageButton
        android:id="@+id/btn_mensaje"
        android:src="@drawable/ic_baseline_insert_comment_24"
        android:layout_width="56dp"
        android:layout_height="56dp"
        style="@style/btnAppMensaje"
        app:layout_constraintTop_toBottomOf="@id/btn_examenes"
        android:layout_marginTop="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>