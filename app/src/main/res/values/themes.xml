<resources>

    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="android:statusBarColor">@color/md_theme_light_background</item>
        <item name="android:windowLightStatusBar">true</item>

        <!--<item name="colorInversePrimary">@color/md_theme_light_inversePrimary</item>
        <item name="colorShadow">@color/md_theme_light_shadow</item> -->
        <item name="colorPrimaryInverse">@color/md_theme_light_primaryInverse</item>
    </style>
    <!-- Navigation Drawer -->
    <style name="icon_explorer">
        <item name="android:src">@drawable/search_light</item>
        <item name="android:background">@color/md_theme_light_background</item>
        <item name="android:drawable">@drawable/btn_navigation</item>
    </style>
    <style name="text_icon_explorer">
        <item name="android:textColor">#006781</item>
        <item name="android:text">@string/label_icon_explorer</item>
        <item name="android:textSize">12dp</item>
    </style>
    <!-- Navigation Drawer iconos -->
    <style name="estilo_iconos">
        <item name="itemTextColor">@color/md_theme_light_primary</item>
        <item name="itemIconTint">#99006781</item>
        <item name="android:colorAccent">#55D5FF</item>
    </style>
    <style name="icon_back">
        <item name="android:background">@drawable/background_back</item>
    </style>

    <!-- Botón primario -->
    <style name="btnAppPrimary">
        <item name="android:background">@drawable/btn_primario_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFBFE</item>
    </style>

    <!-- Botón Secundarion -->
    <style name="btnAppSecundary">
        <item name="android:background">@drawable/btn_secundario</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#E8DEF8</item>
    </style>

    <!-- Botón mensaje -->
    <style name="btnAppMensaje">
        <item name="android:background">@drawable/btn_mensaje</item>
        <item name="android:elevation">3dp</item>
    </style>

    <!-- Estilo texto títulos -->
    <style name="titulo">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#55D5FF</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Estilo texto descripción -->
    <style name="description">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/md_theme_light_primary</item>
        <item name="android:padding">2dp</item>
    </style>

    <!-- Diseño background -->
    <style name="background">
        <item name="android:background">@color/md_theme_light_background</item>
    </style>

    <!-- Diseño botón inicio sesión con Google-->
    <style name="btnGoogle">
        <item name="android:background">@drawable/background_google</item>
        <item name="android:src">@drawable/googleg_standard_color_18</item>
        <item name="paddingStart">20dp</item>
    </style>

    <!-- Diseño botón inicio sesión con Facebook-->
    <style name="btnFacebook">
        <item name="android:background">@drawable/background_facebook</item>
        <item name="android:src">@drawable/ic_logofacebook</item>
    </style>

    <!-- Diseño botón inicio sesión con Apple-->
    <style name="btnAppleInicio">
        <item name="android:background">@drawable/background_apple</item>
        <item name="android:src">@drawable/ic_applelogo</item>
    </style>

    <!-- Estilo de los botones principales -->
    <style name="estiloBtn">
        <item name="android:background">@drawable/estilo_btn</item>
    </style>
    <!-- Estilo de los text imput -->
    <style name="estiloTxtInput">
        <item name="android:background">@drawable/estilo_txt_input</item>
    </style>


</resources>