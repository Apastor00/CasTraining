<resources>

    <style name="AppTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_dark_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_dark_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_dark_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_dark_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_dark_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_dark_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_dark_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_dark_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_dark_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_dark_error</item>
        <item name="colorErrorContainer">@color/md_theme_dark_errorContainer</item>
        <item name="colorOnError">@color/md_theme_dark_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_dark_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_dark_background</item>
        <item name="colorOnBackground">@color/md_theme_dark_onBackground</item>
        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_dark_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_dark_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_dark_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_dark_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_dark_inverseSurface</item>
        <!--
        <item name="colorInversePrimary">@color/md_theme_dark_inversePrimary</item>
        <item name="colorShadow">@color/md_theme_dark_shadow</item> -->
        <item name="colorPrimaryInverse">@color/md_theme_dark_primaryInverse</item>
        <item name="android:statusBarColor">@color/md_theme_dark_background</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Botón primario -->
    <style name="btnAppPrimary">
        <item name="android:background">@drawable/btn_primario_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#E0E3E3</item>
    </style>
    <!-- Botón Secundarion -->
    <style name="btnAppSecundary">
        <item name="android:background">@drawable/btn_secundario</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#E8DEF8</item>
    </style>
    <!-- Botón mensaje -->
    <style name="btnAppMensaje">
        <item name="android:background">@drawable/btn_mensaje</item>
        <item name="android:elevation">3dp</item>
    </style>
    <!-- Navigation Drawer iconos -->
    <style name="estilo_iconos">
        <item name="itemTextColor">#9955D5FF</item>
        <item name="itemIconTint">#55D5FF</item>
    </style>
    <!-- Estilo texto títulos -->
    <style name="titulo">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/md_theme_light_background</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Estilo texto descripción -->
    <style name="description">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#99FBFDFD</item>
        <item name="android:padding">2dp</item>
    </style>
    <!-- Diseño botón inicio sesión con Google-->
    <style name="btnGoogle">
        <item name="android:background">@drawable/background_google</item>
        <item name="android:src">@drawable/googleg_standard_color_18</item>
    </style>
    <!-- Diseño botón inicio sesión con Facebook-->
    <style name="btnFacebook">
        <item name="android:background">@drawable/background_facebook</item>
        <item name="android:src">@drawable/ic_logofacebook</item>
    </style>
    <!-- Diseño botón inicio sesión con Apple-->
    <style name="btnAppleInicio">
        <item name="android:background">@drawable/background_apple_night</item>
        <item name="android:src">@drawable/ic_applelogo</item>
    </style>

    <style name="estiloBtn">
        <item name="android:background">@drawable/estilo_btn_night</item>
    </style>

    <!-- Diseño background -->
    <style name="background">
        <item name="android:background">@color/md_theme_dark_background</item>
    </style>
    <string name="label_icon_explorer">Explorar</string>
</resources>